		INSERT INTO PAYDETAIL(
			orderNum,
			oNum,
			cartCnt)
		SELECT  
			#{orderNum, jdbcType=VARCHAR}, onum, cartcnt
		from cart
		where regId = #{regId, jdbcType=VARCHAR}
